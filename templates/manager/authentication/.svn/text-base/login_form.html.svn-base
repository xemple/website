<div id="loginframe">
	<div id="logintitle">
	<span class="bigtitle">login to xemple</span><br/>
	<span class="lilgrey">enter you account information to login</span>
	</div>
	{% if logform.errors %}
	<span class="error">Following fields are required</span>
	{% endif %}
	<form method="post" action=".">
	
	<div id="labelz1">
	<label for="id_username"><span class="orange11">.</span><span class="log">USERNAME : </span></label>
	{% if logform.username.errors %}<span class="error">{{ logform.username.errors|join:", " }}</span>{% endif %}
	
	<br/>

	<label for="id_password"><span class="orange11">.</span><span class="log">password : </span></label>
	{% if logform.password.errors %} <span class="error">{{ logform.password.errors|join:", " }}</span>{% endif %} 
	</div>
	
	<div id="formz1">
		<span class="orange11">&nbsp;</span>{{ logform.username }}<br/>
		<span class="orange11">&nbsp;</span>{{ logform.password }}  {% if logform.password.required %}*{% endif %}
	</div>
	
	<input type="submit" value="Log in" />
	<input type="hidden" name="next" value="/"/>
	</form>
	<span class="lilgrey"><a href="{% url publicweb_index %}"title="Lost your password?">Password lost?</a></span>

</div>